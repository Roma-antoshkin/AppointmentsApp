<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.appointments.AppointmentsApp.controller.dialogs.AppointmentDialogController">

    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- CLIENT -->
            <Label text="Клиент:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="clientComboBox" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- SPECIALIST -->
            <Label text="Специалист:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="specialistComboBox" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- SERVICE -->
            <Label text="Услуга:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="serviceComboBox" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- DATE -->
            <Label text="Дата:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- START TIME -->
            <Label text="Начало:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Spinner fx:id="startHourSpinner" prefWidth="70"/>
                <Spinner fx:id="startMinuteSpinner" prefWidth="70"/>
            </HBox>

            <!-- END TIME -->
            <Label text="Окончание:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Spinner fx:id="endHourSpinner" prefWidth="70"/>
                <Spinner fx:id="endMinuteSpinner" prefWidth="70"/>
            </HBox>

            <!-- STATUS -->
            <Label text="Статус:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="statusComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Сохранить" buttonData="OK_DONE"/>
        <ButtonType text="Отмена" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
