<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.appointments.AppointmentsApp.controller.dialogs.SpecialistDialogController">

    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Name -->
            <Label text="Имя:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <!-- Specialization -->
            <Label text="Специализация:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="specializationField" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <!-- Rating -->
            <Label text="Рейтинг:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="ratingField" prefWidth="250" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Сохранить" buttonData="OK_DONE"/>
        <ButtonType text="Отмена" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
