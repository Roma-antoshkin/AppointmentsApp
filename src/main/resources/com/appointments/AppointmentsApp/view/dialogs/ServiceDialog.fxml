<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.appointments.AppointmentsApp.controller.dialogs.ServiceDialogController">

    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Название:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Длительность (мин):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Spinner fx:id="durationSpinner" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Цена:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType text="Сохранить" buttonData="OK_DONE"/>
        <ButtonType text="Отмена" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
